@page "/factordetail/{FactorId}"

<section class="factor-detail">
    <h1 class="page-title">Detailed Information @Factor.ShortName</h1>

    <div class="col-12 row">
        <div class="col-2">

        </div>
        <div class="col-10 row">
            <div class="col-xs-12 col-sm-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor ID</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Factor.FactorId</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor short name</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.ShortName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor long name</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.LongName</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor Metric</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.Metric </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor input data</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.InputData</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor info type</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.InfoType</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor Source</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.Source</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Notes</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.Notes</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Factor Type</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Factor.FactorType.ToString()</label>
                    </div>
                </div>

            </div>
            <div class="col-xs-12 col-sm-4">
                <div class="track-order-map">
                    <Map Zoom="10" Markers="MapMarkers"></Map>
                </div>
            </div>
        </div>
    </div>
</section>